extends layout

block content
    style.
        .table th, .table td {
             border-top: none !important;
         }
    br
    if offline:
        .jumbotron
            p #{channel} is offline.
    else:

        .row
            .col-md-8
                .row
                    .col-md-4
                        img(src="#{logo}")
                    .col-md-8
                        h1 #{display_name}
                        h2 Current Game: #{game}


            .col-md-4
                .jumbotron
                    h4 Ratings are coming later...

        hr
        .row
            .col-md-8
                .row
                    img.img-responsive(src="http://static-cdn.jtvnw.net/previews-ttv/live_user_"+channel+"-800x450.jpg")

            .col-md-4
                .jumbotron(style="padding-top:5px")
                    h3 Stream Stats
                    .table-responsive
                        table.table
                            tr
                                td
                                    svg(height="16px", width="16px",x="0",y="0", style="fill:red")
                                        path(clip-rule="evenodd", d="M11,14H5H2v-1l3-3h2L5,8V2h6v6l-2,2h2l3,3v1H11z", fill-rule="evenodd")
                                td
                                    .text-reset #{viewers}
                            tr
                                td
                                    svg(height="16px", width="16px",x="0",y="0")
                                        path(clip-rule="evenodd", d="M11,13H5L1,9V8V7l4-4h6l4,4v1v1L11,13z M8,5C6.344,5,5,6.343,5,8c0,1.656,1.344,3,3,3c1.657,0,3-1.344,3-3C11,6.343,9.657,5,8,5z M8,9C7.447,9,7,8.552,7,8s0.447-1,1-1s1,0.448,1,1S8.553,9,8,9z", fill-rule="evenodd")
                                td
                                    .text-reset #{views}
                            tr
                                td
                                    svg(height="16px", width="16px",x="0",y="0")
                                        path(clip-rule="evenodd", d="M8,13.5L1.5,7V4l2-2h3L8,3.5L9.5,2h3l2,2v3L8,13.5z", fill-rule="evenodd")
                                td
                                    .text-reset #{followers}
                    a.btn.btn-primary.btn-large(href="http://twitch.tv/" + channel) View stream on Twitch.tv

        hr
    .row
        .col-md-2
            if(rank > 1):
                a.btn.btn-primary.btn-large(href="/recommendations/#{str(rank - 1)}") Prev
            else:
                a.btn.btn-warning.btn-large(href="/recommendations/#{str(rank - 1)}", disabled="disabled") Prev

        .col-md-offset-2.col-md-4
            a.btn.btn-success.btn-large(href="/recommend/") Refresh Recommendations!
        .col-md-offset-2.col-md-2
            a.btn.btn-primary.btn-large(href="/recommendations/#{str(rank + 1)}") Next
    hr
